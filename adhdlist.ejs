    <title>ADHD 자가진단 리스트</title>
  </head>
  <body>
    <h1 style="font-size:50px; text-align: center;">ADHD 자가진단 사이트</h1>
    <input type="checkbox" id="menuicon">
    <%- include('adhd.html') %>
  <ul class="list-group">
    <% for (var i = 0; i < posts.length; i++){ %>
    <li class="list-group-item">
      <h4> 이름 : <%= posts[i].이름 %> </h4>
      <p> 날짜 : <%= posts[i].날짜 %> </p>
      <p> 점수 : <%= posts[i].점수 %> </p>
      <button class="adhddelete" data-id="<%= posts[i]._id %>">삭제</button>
    </li>
    <% } %>
  </ul>
  
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  
  <script>
    $('.adhddelete').click(function(e){
      $.ajax({
        method : 'DELETE',
        url : '/adhddelete',
        data : { _id : e.target.dataset.id }
      }).done((결과)=>{
        $(this).parent('li').fadeOut();
      })
    });
  </script>
